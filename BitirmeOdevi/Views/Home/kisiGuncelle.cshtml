@model BitirmeOdevi.Models.kisiModel
@{
    ViewBag.Title = "kisiForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="p-3 bg-white content">
    <div class="mb-5">
        <div class="btn-group" style="width:10%;">
            <a class="btn" style="background-color: #c0392b; color: #ecf0f1; " href="/Home/Index"><img src="data:image/png;base64,">  Geri</a>
        </div>
        <div class="btn-group" style="width:10%; margin-left:79.5%;">
            <a class="btn" style="background-color: #c0392b; color: #ecf0f1; " href="/Security/Logout">Çıkış Yap</a>
        </div>
    </div>
    <div class=" mt-5 rounded">
        <form method="post" action="/Home/Kaydet">
            <div class="form-group row">
                <div class="col align-items-start  h-25 ">
                    <div class="row">

                        <div class="col align-items-start  h-25 ">
                            <label>Ad</label>
                        </div>
                        <div class="col align-items-start h-25 ">
                            <input type="text" class="form-control" name="ad" value="@Model.ad" required />
                        </div>
                        <div class="w-100 mb-1"></div>

                        <div class="col align-items-start  h-25 ">
                            <label>Soyad</label>
                        </div>
                        <div class="col align-items-start h-25 ">
                            <input type="text" class="form-control" name="soyad" value="@Model.soyad" required />
                        </div>
                        <div class="w-100 mb-1"></div>
                        <div class="col align-items-start  h-25 ">
                            <label>Sigorta Durumu</label>
                        </div>
                        <div class="col align-items-start  h-25 ">
                            <select class="form-select" name="sigortaId" aria-label="Default select example">
                                <option value="1" @(Model.sigortaId == 1 ? "selected" : "")>Normal</option>
                                <option value="2" @(Model.sigortaId == 2 ? "selected" : "")>Emekli</option>
                            </select>
                        </div>
                        <div class="w-100 mb-1"></div>
                        <div class="col align-items-start h-25 ">
                            <label>Sakatlık Derecesi</label>
                        </div>
                        <div class="col align-items-start h-25 ">
                            <select class="form-select" name="sakatlikId" aria-label="Default select example">
                                <option value="1" @(Model.sakatlikId == 1 ? "selected" : "")>1.Derece Engelli %80</option>
                                <option value="2" @(Model.sakatlikId == 2 ? "selected" : "")>2.Derece Engelli %60</option>
                                <option value="3" @(Model.sakatlikId == 3 ? "selected" : "")>3.Derece Engelli</option>
                                <option value="4" @(Model.sakatlikId == 4 ? "selected" : "")>Engelli Değil</option>
                            </select>
                        </div>
                        <div class="w-100 mb-1"></div>

                    </div>
                </div>
                <div class="col align-items-end h-25">
                    <div class="row">
                        <div class="col align-items-start h-25 ">
                            <label>Medeni Durumu</label>
                        </div>
                        <div class="col align-items-start  h-25 ">
                            <select class="form-select" id="medeniDurum" name="medeniDurum"  aria-label="Default select example" onchange="toggleInput();">
                                <option value="Bekar" @(Model.medeniDurum == "Bekar" ? "selected" : "")>Bekar</option>
                                <option value="Evli(Çalışıyor)" @(Model.medeniDurum == "Evli(Çalışıyor)" ? "selected" : "")>Evli(Çalışıyor)</option>
                                <option value="Evli(Çalışmıyor)" @(Model.medeniDurum == "Evli(Çalışmıyor)" ? "selected" : "")>Evli(Çalışmıyor)</option>
                                <option value="Faydalanmayacak" @(Model.medeniDurum == "Faydalanmayacak" ? "selected" : "")>AGİ'den faydalanmayacak</option>
                            </select>
                        </div>
                        <div class="w-100 mb-1"></div>
                        <div class="col align-items-start  h-25 ">
                            <label>Çocuk Sayısı</label>
                        </div>
                        <div class="col align-items-start  h-25 ">
                            <select class="form-select" id="cocukSayisi" name="cocukSayisi" aria-label="Default select example"@(Model.medeniDurum == "Bekar" ? "disabled" : "") @(Model.medeniDurum == "Faydalanmayacak" ? "disabled" : "")>
                                <option value="0" @(Model.cocukSayisi == 0 ? "selected" : "")>0</option>
                                <option value="1" @(Model.cocukSayisi == 1 ? "selected" : "")>1</option>
                                <option value="2" @(Model.cocukSayisi == 2 ? "selected" : "")>2</option>
                                <option value="3" @(Model.cocukSayisi == 3 ? "selected" : "")>3</option>
                                <option value="4" @(Model.cocukSayisi == 4 ? "selected" : "")>4</option>
                                <option value="5" @(Model.cocukSayisi == 5 ? "selected" : "")>5 ve 5+</option>
                            </select>
                        </div>
                        <div class="w-100 mb-1"></div>
                        <div class="col align-items-start h-25 ">
                            <label>Maaş</label>
                        </div>
                        <div class="col align-items-start h-25 ">
                            <input type="number" name="maas" class="form-control" value="@Model.maas" required />
                        </div>
                        <div class="w-100 mb-1"></div>
                    </div>
                </div>
            </div>
            <input type="hidden" name="id" value="@Model.id">
            <button type="submit" class=" btn btn-primary  w-25" style="margin-left:75%;">Kaydet</button>
        </form>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script>
    function toggleInput() {
        $('#cocukSayisi').prop('disabled', false);
        if ($('#medeniDurum :selected').val() == "Bekar") {
            $('#cocukSayisi').prop('disabled', true);            
        }
        else if ($('#medeniDurum :selected').val() == "Faydalanmayacak") {
            $('#cocukSayisi').prop('disabled', true);
        }
        else {
            $('#cocukSayisi').prop('disabled', false);
        }
    }
</script>








