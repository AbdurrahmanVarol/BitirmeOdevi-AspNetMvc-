
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

</head>
<body>


    <div class="p-3 h-100" style="width: 50%; margin-top: 200px; margin-left: 25%; background-color: #ecf0f1; border: 1px solid white; border-radius:10px;  ">
        <div>
            <a class="btn" style="width:15%; background-color: #2980b9; color: #ecf0f1; " href="/Security/Login"><img src="data:image/png;base64,">  Geri</a>
            <p class="d-inline w-25 font-weight-bold" style="color: #2980b9; margin-left: 30%; ">Kayıt Ol</p>
        </div>
        <form method="post">
            <!-- ad -->
            <input type="text" class="form-control w-50 m-auto mt-5 mb-3" style="" name="ad" placeholder="Ad" required />
            <div class="w-100"></div>
            <!-- soyad -->
            <input type="text" class="form-control w-50 m-auto mb-3" style="" name="soyad" placeholder="Soyad" required />
            <div class="w-100"></div>
            <!-- kullanıcı adı -->
            <input type="text" class="form-control w-50 m-auto mb-1" style="" name="kullaniciAd" placeholder="Kullanıcı Adı" required />
            <div class="w-100"></div>
            <!-- kullanıcı adı hata mesaju -->
            <p class="d-inline text-danger font-weight-bold" style="margin-left:25%;">@ViewBag.kullaniciMesaj</p>
            <!-- sifre -->
            <div class="w-100"></div>
            <input type="password" class="d-inline form-control w-25 mt-3 mb-1" style="margin-left:25%;" name="sifre" placeholder="Şifre" required />
            <input type="password" class="d-inline form-control w-25 " style="" name="sifreTekrar" placeholder="Şifre Tekrar" required />
            <div class="w-100"></div>
            <!-- sifre hata mesajı  -->
            <p class="d-inline text-danger font-weight-bold" style="margin-left:25%;">@ViewBag.sifreMesaj</p>
            <div class="w-100"></div>
            <!-- email -->
            <input type="email" class="form-control w-50 m-auto mt-3 mb-5" style="" name="email" placeholder="E mail" required />
            <button type="submit" class="btn btn-primary me-1 mb-5 w-25" style="margin-left:24%;"> Kayıt Ol </button>
        </form>
    </div>
    <script src="@Url.Content("https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js")" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
    <script src="@Url.Content("https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js")" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

</body>
</html>
